    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Jest Current File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--testPathPattern='${fileBasenameNoExtension}'",
                "--runInBand"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "X.500: Jest Current File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/@nrwl/cli/bin/nx",
            "args": [
                "test",
                "x500",
                "--runInBand"
            ]
        }
    ]
}
