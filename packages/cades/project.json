{
    "name": "cades",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/cades/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/cades",
                "tsConfig": "packages/cades/tsconfig.lib.json",
                "packageJson": "packages/cades/package.json",
                "main": "packages/cades/src/index.ts",
                "assets": ["packages/cades/*.md", "packages/cades/LICENSE.txt"]
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["packages/cades/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/cades"],
            "options": {
                "jestConfig": "packages/cades/jest.config.js",
                "passWithNoTests": true
            }
        }
    }
}
