{
    "name": "x1080",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/x1080/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/x1080",
                "tsConfig": "packages/x1080/tsconfig.lib.json",
                "packageJson": "packages/x1080/package.json",
                "main": "packages/x1080/src/index.ts",
                "assets": ["packages/x1080/*.md", "packages/x1080/LICENSE.txt"]
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["packages/x1080/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/x1080"],
            "options": {
                "jestConfig": "packages/x1080/jest.config.js",
                "passWithNoTests": true
            }
        }
    }
}
