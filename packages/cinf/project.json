{
    "name": "cinf",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/cinf/src",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["packages/cinf/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/cinf"],
            "options": {
                "jestConfig": "packages/cinf/jest.config.js",
                "passWithNoTests": true
            }
        },
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/cinf",
                "tsConfig": "packages/cinf/tsconfig.lib.json",
                "packageJson": "packages/cinf/package.json",
                "main": "packages/cinf/src/index.ts",
                "assets": ["packages/cinf/*.md", "packages/cinf/LICENSE.txt"]
            }
        }
    }
}
