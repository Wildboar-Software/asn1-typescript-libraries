{
    "name": "casscam",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/casscam/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/casscam",
                "tsConfig": "packages/casscam/tsconfig.lib.json",
                "packageJson": "packages/casscam/package.json",
                "main": "packages/casscam/src/index.ts",
                "assets": ["packages/casscam/*.md", "packages/casscam/LICENSE.txt"]
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["packages/casscam/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",

            "options": {
                "jestConfig": "packages/casscam/jest.config.js",
                "passWithNoTests": true
            }
        }
    }
}
