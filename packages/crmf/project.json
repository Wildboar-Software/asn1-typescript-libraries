{
    "name": "crmf",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/crmf/src",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["packages/crmf/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/crmf"],
            "options": {
                "jestConfig": "packages/crmf/jest.config.js",
                "passWithNoTests": true
            }
        },
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/crmf",
                "tsConfig": "packages/crmf/tsconfig.lib.json",
                "packageJson": "packages/crmf/package.json",
                "main": "packages/crmf/src/index.ts",
                "assets": ["packages/crmf/*.md", "packages/crmf/LICENSE.txt"]
            }
        }
    }
}
