{
    "name": "ess",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/ess/src",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["packages/ess/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/ess"],
            "options": {
                "jestConfig": "packages/ess/jest.config.js",
                "passWithNoTests": true
            }
        },
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/ess",
                "tsConfig": "packages/ess/tsconfig.lib.json",
                "packageJson": "packages/ess/package.json",
                "main": "packages/ess/src/index.ts",
                "assets": ["packages/ess/*.md", "packages/ess/LICENSE.txt"]
            }
        }
    }
}
