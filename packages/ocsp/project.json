{
    "name": "ocsp",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/ocsp/src",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["packages/ocsp/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/ocsp"],
            "options": {
                "jestConfig": "packages/ocsp/jest.config.js",
                "passWithNoTests": true
            }
        },
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/ocsp",
                "tsConfig": "packages/ocsp/tsconfig.lib.json",
                "packageJson": "packages/ocsp/package.json",
                "main": "packages/ocsp/src/index.ts",
                "assets": ["packages/ocsp/*.md", "packages/ocsp/LICENSE.txt"]
            }
        }
    }
}
