{
    "name": "pkcs",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/pkcs/src",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["packages/pkcs/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/pkcs"],
            "options": {
                "jestConfig": "packages/pkcs/jest.config.js",
                "passWithNoTests": true
            }
        },
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/pkcs",
                "tsConfig": "packages/pkcs/tsconfig.lib.json",
                "packageJson": "packages/pkcs/package.json",
                "main": "packages/pkcs/src/index.ts",
                "assets": ["packages/pkcs/*.md", "packages/pkcs/LICENSE.txt"]
            }
        }
    }
}
