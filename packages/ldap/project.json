{
    "name": "ldap",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/ldap/src",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["packages/ldap/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",

            "options": {
                "jestConfig": "packages/ldap/jest.config.js",
                "passWithNoTests": true
            }
        },
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/ldap",
                "tsConfig": "packages/ldap/tsconfig.lib.json",
                "packageJson": "packages/ldap/package.json",
                "main": "packages/ldap/src/index.ts",
                "assets": ["packages/ldap/*.md", "packages/ldap/LICENSE.txt"]
            }
        }
    }
}
