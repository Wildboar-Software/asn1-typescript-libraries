{
    "name": "cmip",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/cmip/src",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "options": {
                "lintFilePatterns": ["packages/cmip/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/cmip"],
            "options": {
                "jestConfig": "packages/cmip/jest.config.js",
                "passWithNoTests": true
            }
        },
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/cmip",
                "tsConfig": "packages/cmip/tsconfig.lib.json",
                "packageJson": "packages/cmip/package.json",
                "main": "packages/cmip/src/index.ts",
                "assets": ["packages/cmip/*.md", "packages/cmip/LICENSE.txt"]
            }
        }
    }
}
